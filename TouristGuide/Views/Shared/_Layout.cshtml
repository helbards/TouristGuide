@using TouristGuide.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Tourist Guide - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
	<div id="site">
		<header>																																																																																																			<div class="inner_copy"><a href="http://www.greatdirectories.org/">web directories</a><a href="http://www.bestfreetemplates.info/">free CSS templates</a></div>
			<nav>
                <ul id="menu">
				    <li class="home">@Html.ActionLink("Home", "Index", "Home")</li>
				    <li>@Html.ActionLink("Countries", "Index", "Country")</li>
				    <li>@Html.ActionLink("Cities and Regions", "Index", "Place")</li>
                    <li>@Html.ActionLink("Attractions", "Index", "Attraction")</li>
                    <li>@Html.ActionLink("Mobile app", "Mobile", "Home")</li>
				    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
			</nav>
			<div class="social">
                <a href="http://www.facebook.com/pages/Tourist-Guide/178043812281023"><img src="../../Content/images/icon_facebook.jpg" alt="Facebook Fan Page" /></a>
                <a href="http://www.youtube.com/user/jj09kstate"><img src="../../Content/images/icon_youtube.png" alt="Youtube Channel" /></a>
			</div>
			@Html.ActionImage("Index", "Home", null, "../../Content/images/logo.jpg", "Tourist Guide", "logo")
			<p class="slogan"><img src="../../Content/images/title.png" alt="Now the World is Yours" /></p>
		</header>
		<section id="content">
			<div id="wrapper">
				<div id="main">
					<div id="posts">
						<h2>@ViewBag.Title</h2>
                        <div id="render">@RenderBody()</div>
					</div>
				</div>
				<div id="sidebar">
					<img src="../../Content/images/sidebar_top.png" alt="About Tourist Guide" width="333" height="325" class="quote" /><br />
					<div class="sidebar-title">
                        ACCOUNT
                    </div>
                    @{Html.RenderAction("LogOnFast", "Account");}
                    <hr class="sidebar-hr" />										
					
				</div>
			</div>
		</section>
		<footer>
			<nav id="bottom_menu">
				<ul>
					<li>@Html.ActionLink("Home", "Index", "Home")</li>
				    <li>| @Html.ActionLink("Tourist attractions", "Index", "Attractions")</li>
				    <li>| @Html.ActionLink("Map", "Map", "Home")</li>
                    <li>| @Html.ActionLink("Mobile app", "Mobile", "Home")</li>
				    <li>| @Html.ActionLink("Contact", "Contact", "Home")</li>
				</ul>
			</nav>
			<div class="copyright">
				Copyright &copy; All rights reserved. Design by <a href="http://www.bestfreetemplates.info/" target="_blank" title="best free templates">BFT</a>
			</div>
		</footer>
	</div>
</body>
</html>
