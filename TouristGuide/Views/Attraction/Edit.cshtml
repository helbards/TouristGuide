        @for (int i = 0; i < Model.Images.Count(); ++i)
        { 
            <div style="display:inline-table">
                    <img src="@Url.Content("~/Content/AttractionImages/" + Model.Images[i].FileName)" alt="Image #@i" style="width:100px" /><br />
                    <input type="checkbox" name="Image_@i" id="Image_@i" /> Delete image
